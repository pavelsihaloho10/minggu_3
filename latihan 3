<!DOCTYPE html>
<html>
<head>
    <title>Validasi Nama dan Umur</title>
    <style>
        .error {
            color: red;
        }
    </style>
</head>
<body>
    <h1>Validasi Nama dan Umur</h1>
    <form id="myForm">
        <label for="nama">Nama:</label>
        <input type="text" id="nama" name="nama">
        <span class="error" id="namaError"></span>
        <br><br>
        <label for="umur">Umur:</label>
        <input type="text" id="umur" name="umur">
        <br><br>
        <input type="submit" value="Validasi">
    </form>

    <p id="hasilValidasi"></p>

    <script>
        document.getElementById("myForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Mencegah form dikirimkan

            // Mengambil nilai nama dan umur dari input
            var nama = document.getElementById("nama").value.trim();
            var umur = parseInt(document.getElementById("umur").value.trim());

            // Validasi nama
            if (nama === "") {
                document.getElementById("namaError").innerHTML = "Isikan nama!!";
            } else {
                document.getElementById("namaError").innerHTML = "";
            }

            // Validasi umur
            if (umur < 5) {
                document.getElementById("hasilValidasi").innerHTML = "Anda masih bayi";
            } else if (umur >= 6 && umur <= 15) {
                document.getElementById("hasilValidasi").innerHTML = "Anda masih anak-anak";
            } else if (umur >= 16 && umur <= 30) {
                document.getElementById("hasilValidasi").innerHTML = "Anda masih remaja";
            } else if (umur >= 31 && umur <= 60) {
                document.getElementById("hasilValidasi").innerHTML = "Anda sudah dewasa";
            } else if (umur > 60) {
                document.getElementById("hasilValidasi").innerHTML = "Anda sudah dewasa";
            } else {
                document.getElementById("hasilValidasi").innerHTML = "Anda Game Over";
            }
        });
    </script>
</body>
</html>
